<BorderPane fx:id="borderPane" prefHeight="257.0" prefWidth="346.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.victory.client.controller.RegistrationController">
   <center>
      <HBox alignment="CENTER" prefHeight="222.0" prefWidth="304.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="257.0" prefWidth="186.0">
               <children>
                  <TextField fx:id="loginText" prefHeight="25.0" prefWidth="158.0" promptText="Логин" />
                  <TextField fx:id="passwordText" promptText="Пароль" />
                  <TextField fx:id="emailText" promptText="Эл. почта" />
                  <Button fx:id="buttonRegister" mnemonicParsing="false" onAction="#buttonRegisterClick" prefHeight="25.0" prefWidth="149.0" text="Зарегистрироваться" />
                  <Hyperlink fx:id="loginLink" onAction="#loginLinkClick" text="Авторизация" />
                  <HBox alignment="CENTER" prefHeight="0.0" prefWidth="186.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="75.0" prefWidth="74.0">
                           <children>
                              <TextField fx:id="portText" alignment="CENTER" prefHeight="25.0" prefWidth="81.0" promptText="Порт" text="987" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
